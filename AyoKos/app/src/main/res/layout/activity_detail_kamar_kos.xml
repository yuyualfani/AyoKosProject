<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.yuyu.ayokos.DetailKamarKos">


    <LinearLayout

        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc3b60a7"
        android:orientation="vertical">
        <EditText
            android:id="@+id/namakos"
            android:hint="Masukkan nama kos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp" />

        <EditText
            android:id="@+id/harga"
            android:hint="Masukkan harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namakos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp" />


        <EditText
            android:id="@+id/stock"
            android:hint="Stock Kamar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/harga"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foto Kamar"
            android:layout_below="@+id/stock"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:id="@+id/textView" />

        <ImageView
            android:id="@+id/foto"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp" />

        <Button
            android:id="@+id/lihatlokasi"
            android:text="lihat map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/buttonBook"
            android:text="book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/foto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"/>




